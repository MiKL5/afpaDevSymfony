{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div class="container navtext">
        <h1 class="ms-3 mt-5 mb-5">User</h1>
    
        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ user.id }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ user.email }}</td>
                </tr>
                <tr>
                    <th>Roles</th>
                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                </tr>
                <tr>
                    <th>Password</th>
                    <td>{{ user.password }}</td>
                </tr>
                <tr>
                    <th>IsVerified</th>
                    <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
                </tr>
            </tbody>
        </table>
    
        {# <a href="{{ path('app_client_index') }}">back to list</a> #}
    
        <a class="mt-5 mb-5 ms-3" href="{{ path('app_client_edit', {'id': user.id}) }}">edit</a>
    
        {# {{ include('client/_delete_form.html.twig') }} #}
    </div>
{% endblock %}
