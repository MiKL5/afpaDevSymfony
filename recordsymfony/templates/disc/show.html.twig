{% block title %}Disc{% endblock %}

{% block body %}
    <h1>Disc</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ disc.id }}</td>
            </tr>
            <tr>
                <th>Disc_title</th>
                <td>{{ disc.discTitle }}</td>
            </tr>
            <tr>
                <th>Disc_genre</th>
                <td>{{ disc.discGenre }}</td>
            </tr>
            <tr>
                <th>Disc_label</th>
                <td>{{ disc.discLabel }}</td>
            </tr>
            <tr>
                <th>Disc_picture</th>
                <td>{{ disc.discPicture }}</td>
            </tr>
            <tr>
                <th>Disc_price</th>
                <td>{{ disc.discPrice }}</td>
            </tr>
            <tr>
                <th>Disc_year</th>
